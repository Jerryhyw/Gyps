<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MySegmentTabLayout">
        <attr name="mtl_indicator_color" format="color" />
        <attr name="mtl_indicator_height" format="dimension" />
        <attr name="mtl_indicator_margin_left" format="dimension" />
        <attr name="mtl_indicator_margin_top" format="dimension" />
        <attr name="mtl_indicator_margin_right" format="dimension" />
        <attr name="mtl_indicator_margin_bottom" format="dimension" />
        <attr name="mtl_indicator_corner_radius" format="dimension" />
        <attr name="mtl_indicator_anim_enable" format="boolean" />
        <attr name="mtl_indicator_anim_duration" format="integer" />
        <attr name="mtl_indicator_bounce_enable" format="boolean" />
        <attr name="mtl_divider_color" format="color" />
        <attr name="mtl_divider_width" format="dimension" />
        <attr name="mtl_divider_padding" format="dimension" />
        <attr name="mtl_tab_padding" format="dimension" />
        <attr name="mtl_tab_space_equal" format="boolean" />
        <attr name="mtl_tab_width" format="dimension" />
        <attr name="mtl_textsize" format="dimension" />
        <attr name="mtl_textSelectColor" format="color" />
        <attr name="mtl_textUnselectColor" format="color" />
        <attr name="mtl_textUnenableColor" format="color" />
        <attr name="mtl_textBold" format="enum">
            <enum name="NONE" value="0" />
            <enum name="SELECT" value="1" />
            <enum name="BOTH" value="2" />
        </attr>
        <attr name="mtl_textAllCaps" format="boolean" />
        <attr name="mtl_bar_color" format="color" />
        <attr name="mtl_bar_stroke_color" format="color" />
        <attr name="mtl_bar_stroke_width" format="dimension" />
    </declare-styleable>
    <declare-styleable name="SignatureView">
        <attr name="penColor" format="color" />
        <attr name="backColor" format="color" />
        <attr name="penWidth" format="integer" />
    </declare-styleable>
    <declare-styleable name="NumberLiftView">
        <attr name="lift_minLimit" format="integer" />
        <attr name="lift_maxLimit" format="integer" />
    </declare-styleable>

    <declare-styleable name="BadgeView">
        <attr name="isAngle" format="boolean" />
    </declare-styleable>
</resources>